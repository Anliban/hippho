<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.anliban.team.hippho.ui.detail.DetailViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/detail_select_image"
            style="@style/Theme.Hippho.Button.IconOutLine"
            android:layout_width="@dimen/match_constraint"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="사진 선택"
            app:icon="@drawable/ic_check_black_24dp"
            app:layout_constraintEnd_toStartOf="@id/detail_un_select_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/detail_un_select_image"
            style="@style/Theme.Hippho.Button.IconOutLine"
            android:layout_width="@dimen/match_constraint"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="선택 취소"
            app:icon="@drawable/ic_check_black_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/detail_select_image"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/detail_keep_all"
            style="@style/Theme.Hippho.Button.IconOutLine"
            android:layout_width="@dimen/match_constraint"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="모두 남기기"
            app:layout_constraintEnd_toStartOf="@id/detail_remove_all"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detail_select_image" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/detail_remove_all"
            style="@style/Theme.Hippho.Button.IconOutLine"
            android:layout_width="@dimen/match_constraint"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="모두 남기기"
            app:icon="@drawable/ic_delete_black_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/detail_keep_all"
            app:layout_constraintTop_toBottomOf="@id/detail_un_select_image" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>